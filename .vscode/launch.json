    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python: Odoo16",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "python": "${workspaceRoot}/venv/bin/python3",
            "program": "${workspaceRoot}/odoo/odoo-bin",
            "args": [
                "--config=${workspaceRoot}/odoo/debian/odoo.conf"
            ],
            "cwd": "${workspaceRoot}",
            "env": {},
            "envFile": "${workspaceRoot}/.env",
            
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}